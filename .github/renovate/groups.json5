{
  "packageRules": [
    {
      "description": "1Password Group",
      "groupName": "1Password",
      "matchPackagePatterns": ["1password"],
      "matchDatasources": ["docker"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true
    },
    {
      "description": "Hashicorp Group",
      "groupName": "hashicorp",
      "matchPackagePatterns": ["vault"],
      "matchDatasources": ["helm"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true,
      "stabilityDays": 2
    },
    {
      "description": "Crowdsec Group",
      "groupName": "crowdsecc",
      "matchPackagePatterns": ["crowdsec-bouncer-traefik-plugin"],
      "matchDatasources": ["github-releases"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true,
      "stabilityDays": 2
    },
    {
      "description": "secrets-store-csi-driver Group",
      "groupName": "secrets-store-csi-driver",
      "matchPackagePatterns": ["secrets-store-csi-driver"],
      "matchDatasources": ["helm"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true,
      "stabilityDays": 2
    },
    {
      "matchDatasources": ["github-tags", "docker"],
      "matchPackagePatterns": ["rancher/system-upgrade-controller"],
      "groupName": "system-upgrade-controller-suite",
      "additionalBranchPrefix": "",
      "separateMinorPatch": true
    },
    {
      "description": "Rook-Ceph Group",
      "groupName": "Rook-Ceph",
      "matchPackagePatterns": ["rook.ceph"],
      "matchDatasources": ["helm"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true
    },
    {
      "description": "External Snapshotter Group",
      "groupName": "External Snapshotter",
      "matchPackageNames": ["snapshot-controller", "snapshot-validation-webhook"],
      "matchDatasources": ["helm"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true
    },
    {
      "description": "Thanos image and chart - versions do not match",
      "groupName": "Thanos",
      "matchDatasources": ["docker", "github-releases", "helm"],
      "matchPackagePatterns": ["quay.io/thanos/thanos", "thanos"],
      "matchUpdateTypes": ["minor", "patch"],
      "group": { 
        "commitMessageTopic": "{{{groupName}}} group" 
      },
      "separateMinorPatch": false
    },
    {
      "description": "Vector image and chart - versions do not match",
      "groupName": "Vector",
      "matchDatasources": ["docker", "github-releases", "helm"],
      "matchPackagePatterns": ["vector"],
      "matchUpdateTypes": ["minor", "patch"],
      "group": { 
        "commitMessageTopic": "{{{groupName}}} group" 
      },
      "separateMinorPatch": false,
      "stabilityDays": 2
    }
  ]
}