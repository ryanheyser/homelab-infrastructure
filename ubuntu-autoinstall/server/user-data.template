#cloud-config
autoinstall:
  version: 1
  refresh-installer:
    update: yes
  updates: all
  locale: en_US
  keyboard:
    layout: us
  source:
    search_drivers: true
    id: "ubuntu-server"
  ssh:
    install-server: yes
    allow-pw: yes
  storage:
    swap:
      size: 0
    layout:
      name: lvm
      sizing-policy: all
      match:
        path: /dev/sda
  packages:
  - software-properties-common
  - nfs-common
  - nfs4-acl-tools
  apt:
    geoip: true
    fallback: offline-install
    sources:
      ansible:
        source: ppa:ansible/ansible
  codecs:
    install: true
  drivers:
    install: true
  kernel:
    flavor: hwe
  timezone: geoip
  network:
    version: 2
    renderer: networkd
    ethernets:
      ens18:
        match: {name: "ens18"}
        dhcp4: true
        dhcp-identifier: mac
        dhcp6: false
        mtu: 9000
    vlans:
      vl99:
        id: 99
        link: ens18
        dhcp4: true
        dhcp6: false
        dhcp-identifier: mac
        dhcp4-overrides:
          route-metric: 200
        dhcp6-overrides:
          route-metric: 200
  user-data:
    write_files:
    - path: /etc/logrotate.d/rsyslog
      content: |
        /var/log/syslog
        /var/log/mail.log
        /var/log/kern.log
        /var/log/auth.log
        /var/log/user.log
        /var/log/cron.log
        {
                rotate 2
                maxsize 10M
                daily
                missingok
                notifempty
                compress
                delaycompress
                sharedscripts
                postrotate
                        /usr/lib/rsyslog/rsyslog-rotate
                endscript
        }
    - path: /etc/apt/apt.conf.d/99-Phased-Updates
      append: true
      content: |
        Update-Manager::Always-Include-Phased-Updates;
        APT::Get::Always-Include-Phased-Updates;
    - path: /etc/systemd/journald.conf
      append: true
      content: |
        Storage=volatile
        SystemMaxUse=100M
    - path: /etc/modprobe.d/blacklist.conf
      append: true
      content: |
        # Nouveau driver conflicts with NVidia driver
        blacklist nouveau
    - path: /etc/bash.bashrc
      append: true
      content: |
        
        # auto install additions
        export PS1="\[$bldwht\][\t]\[$txtrst\] \[$bldylw\][\[$txtrst\]\W\[$bldylw\]]\[$txtrst\]\[\033[\$(git_color)m\]\$(parse_git_branch) \[$txtylw\]>\[$txtrst\] "
        export GPG_TTY="$(tty)"
        export GPG_FINGERPRINT=""
    - path: /etc/profile
      append: true
      content: |
        
        # auto install additions
        export PS1="\[$bldwht\][\t]\[$txtrst\] \[$bldylw\][\[$txtrst\]\W\[$bldylw\]]\[$txtrst\]\[\033[\$(git_color)m\]\$(parse_git_branch) \[$txtylw\]>\[$txtrst\] "
