      append: true
      defer: true
      content: |
        
        # auto install additions
        export PS1="\[$bldwht\][\t]\[$txtrst\] \[$bldylw\][\[$txtrst\]\W\[$bldylw\]]\[$txtrst\]\[\033[\$(git_color)m\]\$(parse_git_branch) \[$txtylw\]\$\[$txtrst\] "
